# Ghost Pro API Configuration
# Copy this file to .env and fill in your actual API keys

# Ghost Content API Key (for reading published content)
GHOST_CONTENT_API_KEY=your_content_api_key_here

# Ghost Admin API Key (for creating/updating content via API)
# Format: id:secret
GHOST_ADMIN_API_KEY=your_admin_api_key_here

# Ghost API URL (your Ghost Pro instance URL)
GHOST_API_URL=https://your-site.ghost.io

# Chatbot Backend API (Cloudflare Workers endpoint)
# This is a PUBLIC endpoint (not a secret) - used by frontend JavaScript widget
CHATBOT_API_URL=https://your-worker.workers.dev/chat
